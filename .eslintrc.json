{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "plugins": [
        "jsdoc"
    ],
    "extends": [ "eslint:recommended", "plugin:jsdoc/recommended-error" ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            "tab",
            { "SwitchCase": 1 }
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "jsdoc/newline-after-description": [
            "error",
            "never"
        ],
        "no-unneeded-ternary": [
            "error"
        ],
        "multiline-ternary": [
            "always-multiline"
        ]
    }
}
